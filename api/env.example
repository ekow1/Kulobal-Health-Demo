# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/kulobal_health
MONGODB_URI_PROD=mongodb+srv://username:password@cluster.mongodb.net/kulobal_health

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=https://demo.ekowlabs.space

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Payment Gateway (Selcom)
SELCOM_API_KEY=your-selcom-api-key
SELCOM_API_SECRET=your-selcom-api-secret
SELCOM_BASE_URL=https://api.selcom.co.tz

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads
